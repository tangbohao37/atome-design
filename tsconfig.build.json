{
  "compilerOptions": {
    "rootDir": "./components",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ES2015"],
    "baseUrl": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./*"]
    },
    "outDir": "./es"
  },
  "exclude": ["**/__test__", "node_modules"],
  "include": ["./components/**/*.ts", "./components/**/*.tsx", "./type.d.ts"]
}
