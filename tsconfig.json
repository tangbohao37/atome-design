{
  "compilerOptions": {
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "rootDir": ".",
    "composite": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ES2015"],
    "baseUrl": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "types": ["node", "vitest", "vitest/importMeta", "vitest/globals", "@testing-library/react-hooks", "@testing-library/react"],
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["./.vitepress/cache", "./uno.config.ts"],
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.module.{css,less}"]
}
